<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Mason>$(CommandPrefix) &quot;$(MSBuildThisFileDirectory)..\tools\mason.exe&quot;</Mason>
  </PropertyGroup>

  <Target Name="PreprocessTemplates" AfterTargets="BeforeBuild">
    <Exec Command="$(Mason) prep $(ProjectFile)" />
  </Target>
</Project>